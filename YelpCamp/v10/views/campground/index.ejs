<% include ../partials/header%>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p><a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a></p>
        </div>
    </div>

    <div class="row text-center" style="display: flex; flex-wrap: wrap">
        <% for (let i = 0; i < campgrounds.length; i++) {%>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">                
                <img src="<%= campgrounds[i].image%>">
                <div class="caption">
                    <h4><%= campgrounds[i].name%></h4>
                </div>
                <p><a href="/campgrounds/<%= campgrounds[i]._id %>" class="btn btn-primary">More Info</a></p>
            </div>
        </div>
        <% } %>
    </div>
    
</div>

<% include ../partials/footer%>