<% include ./partials/header %>

<div class="ui container main text segment">
    <div class="item">
        <h1 class="ui header"><%= blog.title %></h1>
        <img src="<%= blog.image %>">
        <div class="description">
            <p><%- blog.body %></p>
        </div>
        <a class="ui orange basic button" href="/blogs/<%= blog._id %>/edit">Edit</a>
        <form style="display: inline;" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
            <button class="ui red basic button" type="submit">Delete</button>
        </form>
    </div>
</div>

<% include ./partials/footer %>
